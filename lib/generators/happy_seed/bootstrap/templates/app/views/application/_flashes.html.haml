- if !flash.empty?
  #flash
    - flash.each do |key, value|
      %div{ :title => key.to_s.humanize, :class => flash_class(key), :role => "alert" }
        %button.close{ "type" => "button", "data-dismiss" => "alert"}
          %span{ "aria-hidden" => "true" } &times;
          %span{ "class" => "sr-only" } Close
        %p= value
